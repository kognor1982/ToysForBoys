@model IEnumerable<ToysForBoys.Models.BestelDetail>
@{
    ViewBag.Title = "Winkelwagen";
}

<h2>Winkelwagen - Overzicht</h2>

<table class="table">
    <tr>
        <th>Product</th>
        <th>Prijs</th>
        <th>Aantal</th>
        <th>Totaal</th>
        <th>Verwijder</th>
    </tr>
    @{ 
        decimal iTotaal = 0;
    }
    @foreach (var item in Model)
    {
        iTotaal += item.Totaal;
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Product.Naam)</td>
            <td>@Html.DisplayFor(modelItem => item.Product.Prijs)</td>
            <td>@Html.DisplayFor(modelItem => item.Aantal)</td>
            <td>@Html.DisplayFor(modelItem => item.Totaal)</td>
            <td>Delete</td>
        </tr>
    }
    <tfoot>
        <tr>
            <td colspan="3"></td>
            <td>€ @iTotaal</td>
            <td></td>
        </tr>
    </tfoot>
</table>

@Html.ActionLink("Herbereken", "Herbereken")